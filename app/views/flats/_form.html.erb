<%= simple_form_for(@flat) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :number_of_guests, collection: Flat::NOG %>
    <%= f.input :price_per_night, input_html: { min: '0', step: 'any' }%>
  </div>

  <div class="form-actions">
    <div class="d-grid gap-2"><%= f.button :submit, class: 'btn btn-primary' %></div>
  </div>
<% end %>
